<%= form_for(@letsgo) do |f| %>
	<div class="form-group">
		<%= f.text_area :content, placeholder: "Propose new date...",class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.select :tag, options_for_select( [["Select One", ""], "Eat/Drink", "Listen/Watch", "Play", "Explore", "Other"]), class: 'form-control' %>
	</div>
		<%= f.submit "Post", class: 'btn btn-primary' %>
		<%= link_to 'random date', 'letsgos/random', remote: true %>
		<!-- <a href="/letsgos/random" class="ajax">random date</a> -->
		<% end %>